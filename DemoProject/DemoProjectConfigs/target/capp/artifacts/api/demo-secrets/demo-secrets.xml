<?xml version="1.0" encoding="UTF-8"?>
<api context="/secrets" name="demo-secrets" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET">
        <inSequence>
            <log>
                <property expression="get-property('env','test')" name="secret test value : "/>
            </log>
            <payloadFactory media-type="json">
                <format>{"test-secret" : "$1"}</format>
                <args>
                    <arg evaluator="xml" expression="get-property('env','test')"/>
                </args>
            </payloadFactory>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
